<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/ticket_navigation"
    app:startDestination="@id/homeFragment">

    <fragment
        android:id="@+id/homeFragment"
        android:name="com.bm.fire_emergency_mqtt_mobile.fragments.HomeFragment"
        android:label="fragment_ticket"
        tools:layout="@layout/fragment_home" >

        <action
            android:id="@+id/action_homeFragment_to_settingsFragment"
            app:destination="@id/settingsFragment" />
        <action
            android:id="@+id/action_homeFragment_to_staticsFragment"
            app:destination="@id/staticsFragment" />
    </fragment>
    <fragment
        android:id="@+id/staticsFragment"
        android:name="com.bm.fire_emergency_mqtt_mobile.fragments.StaticsFragment"
        android:label="fragment_user"
        tools:layout="@layout/fragment_statics" >
        <action
            android:id="@+id/action_staticsFragment_to_settingsFragment"
            app:destination="@id/settingsFragment" />
        <action
            android:id="@+id/action_staticsFragment_to_homeFragment"
            app:destination="@id/homeFragment" />
    </fragment>

    <fragment
        android:id="@+id/settingsFragment"
        android:name="com.bm.fire_emergency_mqtt_mobile.fragments.SettingsFragment"
        android:label="fragment_user"
        tools:layout="@layout/fragment_settings" >
        <action
            android:id="@+id/action_settingsFragment_to_homeFragment"
            app:destination="@id/homeFragment" />
        <action
            android:id="@+id/action_settingsFragment_to_staticsFragment"
            app:destination="@id/staticsFragment" />
    </fragment>
</navigation>